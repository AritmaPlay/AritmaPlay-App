<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextContent.LargeDisplay"
                android:layout_gravity="bottom"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Hello world" />
        </FrameLayout>

        <TextView
            style="@style/TextContent.Heading.Bold"
            android:layout_gravity="bottom"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Hello world"/>

        <TextView
            style="@style/TextContent.Heading"
            android:layout_gravity="bottom"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="The quick brown fox jumps over the lazy dog" />

        <TextView
            style="@style/TextContent.Body"
            android:layout_gravity="bottom"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="The quick brown fox jumps over the lazy dog" />
        <TextView
            style="@style/TextContent.Caption"
            android:layout_gravity="bottom"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="The quick brown fox jumps over the lazy dog" />

        <TextView
            style="@style/TextContent.Heading"
            android:layout_gravity="bottom"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="The quick brown fox jumps over the lazy dog" />

        <Button
            style="@style/PrimaryButtonStyle"
            android:background="@drawable/bg_button_primary"
            app:backgroundTint="@null"
            android:text="Hello world"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            style="@style/SecondaryButtonStyle"
            android:background="@drawable/bg_button_secondary"
            app:backgroundTint="@null"
            android:text="Hello world"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>